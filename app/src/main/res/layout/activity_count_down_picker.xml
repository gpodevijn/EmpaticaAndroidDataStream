<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.ac.ulb.iridia.empaticadatastream.CountDownTimerPicker"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/indigo_500">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/hour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40sp"
            android:textColor="@color/white_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="h"
            android:textSize="18sp"
            android:paddingEnd="12dip"
            android:textColor="@color/white_text"
            />

        <TextView
            android:id="@+id/min_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="40sp"
            android:textColor="@color/white_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"
            android:textSize="18sp"
            android:paddingEnd="12dip"
            android:textColor="@color/white_text"/>

        <TextView
            android:id="@+id/sec_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="40sp"
            android:textColor="@color/white_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="s"
            android:textSize="18sp"
            android:paddingEnd="22dp"
            android:textColor="@color/white_text"/>

        <TextView
            android:id="@+id/clear_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_icon"
            android:textSize="22sp"
            android:textColor="@color/white_text"
            android:padding="10dp"/>
        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/darker_gray"/>

    <TableLayout
        android:id="@+id/numpad_tablelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
>
        <TableRow>

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:background="@drawable/rippletextview"
                android:textSize="32sp"
                android:padding="20dp"
                android:textColor="@color/white_text"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="32sp"
                android:padding="20dp"
                android:background="@drawable/rippletextview"
                android:textColor="@color/white_text"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="32sp"
                android:padding="20dp"
                android:background="@drawable/rippletextview"
                android:textColor="@color/white_text"
                />
        </TableRow>

        <TableRow>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/rippletextview"
            android:textColor="@color/white_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="@drawable/rippletextview"
                android:textColor="@color/white_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="@drawable/rippletextview"
                android:textColor="@color/white_text"
                />
        </TableRow>

        <TableRow>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/rippletextview"
            android:textColor="@color/white_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="@drawable/rippletextview"
                android:textColor="@color/white_text"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:background="@drawable/rippletextview"
                android:textColor="@color/white_text"
                />
        </TableRow>

        <TableRow>

        <TextView
                android:layout_span="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/rippletextview"
            android:textColor="@color/white_text"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/saveTime_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/rippleroundedbutton"
        android:text="@string/check_icon"
        android:textColor="@color/white_text"
        android:textSize="32sp"
        android:elevation="100dp"/>
</LinearLayout>
